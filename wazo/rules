#!/bin/sh

case "$1" in
build)
    python3 setup.py bdist -d dist/python3
    ;;

package)
    tar xvf dist/python3/wazo-call-on-queue-stat-*.tar.gz -C ${pkgdir}
    ;;

install)
    systemctl restart wazo-call-logd
    ;;

uninstall)
    systemctl restart wazo-call-logd
    ;;

postrm) ;;

    *)
    echo "$0 called with unknown argument '$1'" >&2
    exit 1
    ;;
esac
